{
  "manifest_version": 2,
  "name": "LinguaGo",
  "version": "0.1.2",
  "description": "A browser extension to help translate in a side bar.",
  "permissions": [
    "activeTab",
    "https://translate.google.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{95e229ad-f91a-447b-905b-d4f98c4ec075}"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'",
  "sidebar_action": {
    "default_panel": "index.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "browser_action": {},
  "background": {
    "scripts": [
      "./extension-actions/background.js"
    ]
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}