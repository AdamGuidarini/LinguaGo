{
  "name": "lingua-go",
  "version": "0.1.0",
  "scripts": {
    "build": "ng build --aot && npx webpack --config webpack.config.js && npx web-ext build -s ./dist/lingua-go/browser -o && cp ./src/metadata.json ./dist/lingua-go/browser",
    "start": "web-ext run -t firefox-desktop --devtools -s ./dist/lingua-go/browser",
    "test": "npx jest",
    "lint": "ng lint",
    "clean": "rm -r dist",
    "package": "zip -r -FS ./linguago.zip * --exclude '*.git*'"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^webextension-polyfill$": "<rootDir>/src/__mocks__/browser.ts"
    },
    "setupFilesAfterEnv": [
      "./setup-jest.ts"
    ],
    "testPathIgnorePatterns": [
      "src/extension-actions/*"
    ]
  },
  "license": "GPL-3.0-only",
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/cdk": "17.3.10",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/flex-layout": "^15.0.0-beta.42",
    "@angular/forms": "^17.2.0",
    "@angular/material": "17.3.10",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/router": "^17.2.0",
    "@types/luxon": "^3.7.1",
    "@types/webextension-polyfill": "^0.12.3",
    "google-translate-api-x": "^10.7.2",
    "jest-auto-spies": "^3.0.0",
    "luxon": "^3.7.1",
    "primeicons": "^7.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "web-ext": "^8.8.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.1",
    "@angular-eslint/builder": "20.1.1",
    "@angular/cli": "^17.2.1",
    "@angular/compiler-cli": "^17.2.0",
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "angular-eslint": "20.1.1",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.29.0",
    "jest": "^30.0.4",
    "jest-preset-angular": "^14.6.0",
    "ts-loader": "^9.5.2",
    "typescript": "~5.3.2",
    "typescript-eslint": "8.34.1",
    "webextension-polyfill": "^0.12.0",
    "webpack-cli": "^6.0.1"
  }
}
