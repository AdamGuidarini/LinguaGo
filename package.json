{
  "name": "lexi-go",
  "version": "0.0.0",
  "scripts": {
    "build": "ng build --aot && npx web-ext build -s ./dist/lexi-go/browser --overwrite-dest",
    "start:firefox": "web-ext run --devtools --source-dir ./dist/lexi-go/browser",
    "test": "npx jest"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "./setup-jest.ts"
    ]
  },
  "web-ext": {
    "manifest": "src/manifest.json",
    "name": "LexiGo",
    "version": "1.0",
    "contentScripts": "src/app/app.component.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/cdk": "17.3.10",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/forms": "^17.2.0",
    "@angular/material": "17.3.10",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/router": "^17.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "web-ext": "^8.8.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.1",
    "@angular/cli": "^17.2.1",
    "@angular/compiler-cli": "^17.2.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.4",
    "jest-preset-angular": "^14.6.0",
    "typescript": "~5.3.2"
  }
}